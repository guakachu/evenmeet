    <div style="width: 150px;background-color: white;padding: 10px">
      <% qrcode = RQRCode::QRCode.new("#{root_url}#{challenge_path[1..-1]}/rewards/qrcode?target_id=#{current_user.id}")
      # NOTE: showing with default options specified explicitly
      svg = qrcode.as_svg(
        color: "000000",
        shape_rendering: "crispEdges",
        module_size: 11,
        standalone: true,
        use_path: true,
        viewbox: true,
      )
      %>
      <%= svg.html_safe %>
    </div>
