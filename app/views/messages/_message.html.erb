<% if message.user == current_user %>
  <div class="d-flex flex-row justify-content-end mb-4">
    <div class="d-flex flex-row justify-content-end">
      <div class="msg right p-1 pb-1 pe-2 ps-2 col-10">
        <div id="message-<%= message.id %>" class="text-white">
          <small>
            <strong class="text-info"><%= message.user.first_name %></strong>
          </small>
          <p><%= message.content %></p>
          <div class="d-flex flex-row-reverse">
            <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
          </div>
        </div>
      </div>
      <%= cl_image_tag message.user.photos.first.key, class: "avatar ms-3 align-self-end col-1", style:"height: 50px; width: 50px;", alt: "avatar" %>
    </div>
  </div>
<% else %>
  <div class="d-flex flex-row justify-content-start mb-4">
    <div class="d-flex flex-row justify-content-start">
      <%= cl_image_tag message.user.photos.first.key, class: "avatar me-3 align-self-start col-1", style:"height: 50px; width: 50px;", alt: "avatar" %>
      <div class="msg left p-1 pb-1 pe-2 ps-2 col-10">
        <div id="message-<%= message.id %>" class="text-white">
          <small>
            <strong class="text-info"><%= message.user.first_name %></strong>
          </small>
          <p><%= message.content %></p>
          <div class="d-flex flex-row-reverse">
            <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
