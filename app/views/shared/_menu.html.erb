<div class="px-3 border-0 text-white">
  <div data-controller="toggle-element">

    <% unless params[:controller] == "challenges" && params[:action] == "show" || params[:controller] == "rewards" %>


      <div class="d-flex navbar-menu">

        <div class="d-flex flex-column justify-content-center">
          <i class="fa fa-bars"
            data-action="click->toggle-element#menuactive"
            data-toggle-element-target="menuactive"
            style="font-size:calc(1.275rem + 0.3vw)"></i>
        </div>
      </div>

      <!--
        <% if params[:controller] == "pages" && params[:action] != "dashboard" || params[:controller] == "participations" && params[:action] == "index" %>
          <h4 class="ms-2 m-0">Home</h4>
        <% elsif params[:action] == "dashboard" %>
          <h4 class="ms-2 m-0">My Profile</h4>
        <% elsif user_signed_in? %>
          <h4 class="ms-2 m-0"><%= current_user.current_event&.title %></h4>
        <% end %>

      </div>
      -->
      <div class="event-channel" data-toggle-element-target="modal">
        <i
          class="fa-solid fa-chevron-left"
          data-action="click->toggle-element#menuactive"
          data-toggle-element-target="menuactive"
          style="font-size:calc(1.275rem + 0.3vw);
                  top: 0px;
                  position: fixed;
                  padding: 16px;
                  left: 0;"
        ></i>

        <%= link_to root_path do %>
          <% if params[:controller] == "pages" && params[:action] != "dashboard" || params[:controller] == "participations" && params[:action] == "index" %>
            <span class="menu-highlight-container"><span class="highlight">Home Page</span></span>
          <% else %>
            <span>Home Page</span>
          <% end %>
        <% end %>

        <%= link_to current_event_path do %>
          <% if params[:controller] == "events" || params[:controller] == "relationships" || params[:controller] == "challenges" %>
            <span class="menu-highlight-container"><span class="highlight">My Event</span>
          <% else %>
            <span>My Event</span>
          <% end %>
        <% end %>

        <%= link_to dashboard_path do %>
          <% if params[:action] == "dashboard" %>
            <span class="menu-highlight-container"><span class="highlight">My Profile</span>
          <% else %>
            <span>My Profile</span>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
