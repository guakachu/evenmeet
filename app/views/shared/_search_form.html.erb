<%= form_with url: root_path, method: :get, class: "d-flex justify-content-between search-form" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "search-bar",
    placeholder: "Find an event",
    autocomplete: "off"
  %>

    <%#= text_field_tag :geo,
    params[:geo],
    class: "search-bar",
    placeholder: "Search an event by address",
    autocomplete: "off"
  %>

  <%= button_tag type: 'submit', class: "search-button" do %>
    <i class="fa-solid fa-magnifying-glass"></i>
  <% end %>
<% end %>
