<div class="scrollmenu px-3">
  <% rewards.each do |reward| %>
    <div class="mt-3 me-3 pb-3 scrollsubmenu" style="height: 155px; width: 150px;">
        <div class="reward-card", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path reward.photo.key, width: 1000, crop: :fill %>); background-position: center; background-size: cover;">
        </div>
      <h4 class="event-title m-0"><%= reward.title.capitalize %></h4>
      <div class="event-reward d-inline-block">Reward: <%= reward.reward.capitalize %></div>
    </div>
  <% end %>
</div>
